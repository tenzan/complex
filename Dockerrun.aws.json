{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [{
            "name": "client",
            "image": "tenzan/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "tenzan/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "tenzan/multi-worker",
            "essential": false
        }, {
            "name": "nginx",
            "image": "tenzan/multi-nginx",
            "essential": true,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "links": [
                "client", "server"
            ]
        }
    ]
}